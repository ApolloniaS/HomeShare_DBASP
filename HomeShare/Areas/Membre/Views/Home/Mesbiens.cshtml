    <div class="list-container" style="display:flex;justify-content:space-between;width:70%;">
        <div>
            Titre du bien<br />
            @foreach (HomeShare.Models.BienAEchangerModel item in Model.ListeBiens)
            {
                @item.Titre<br />
            }
        </div>
        <div>
            Description courte<br />
            @foreach (HomeShare.Models.BienAEchangerModel item in Model.ListeBiens)
            {
                @item.DescCourte<br />
