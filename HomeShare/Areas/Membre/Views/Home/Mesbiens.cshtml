@model HomeShare.Models.MembreProfilModel
@{
    ViewBag.Title = "Mesbiens";
}

<!-- banner -->
<div class="inside-banner">
    <div class="container">
        <span class="pull-right"><a href="/Membre/Home">Zone Membre</a> / Mes biens</span>
        <h2>Parcourir tous les biens</h2>
    </div>
</div>
<!-- banner -->

