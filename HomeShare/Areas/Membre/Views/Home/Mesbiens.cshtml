        </div>
        <div>
            Date de création<br />
            @foreach (HomeShare.Models.BienAEchangerModel item in Model.ListeBiens)
            {
                @item.DateCreation<br />
            }
        </div>
        <div>
            Modifcation<br />
            @foreach (HomeShare.Models.BienAEchangerModel item in Model.ListeBiens)
            {
                @:<a href="#">Modifier</a><br />
